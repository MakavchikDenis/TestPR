<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Каталог товаров</title>
   @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" type="text/css" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                @* <a class="navbar-brand" href="#">Панель навигации</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Переключатель навигации">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                         @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link active" aria-current="page" style="text-decoration:none">
                                @Html.ActionLink("Продукты", "Index", "Product")
                            </a>
                            @if (!User.IsInRole("Простой пользователь"))
                            {
                                <a class="nav-link" style="text-decoration:none">
                                    @Html.ActionLink("Категории", "Index", "Category")
                                </a>
                            }
                        }
                        <div style="flex-grow: revert;display: flex!important;flex-basis: auto; margin-left: 50px">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" style="text-decoration:none"  asp-area="" asp-controller="Account" asp-action="Login" href="/Account/Login">Вход</a>

                        }
                            @if (User.IsInRole("Администратор"))
                        {
                                <a class="nav-link" href="/swagger/index.html">Переход на админскую часть</a>
                        }
                            @if (User.Identity.IsAuthenticated)
                        {

                            <div class="nav-link" >
                                @Html.ActionLink("Выйти", "Logout", "Account")
                            </div>

                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register" href="/Account/Register">Регистрация</a>

                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link"  style="margin-left: 10px" asp-area="" asp-controller="Account">@User.Identity.Name</a>

                        }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        @* <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
               
                <nav class="topnav">
                     <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Index" href="/Event">Мероприятия</a>
                        
                     
                        @if (User.IsInRole("Админ"))
                        {
                        <div class="nav-link">
                            @Html.ActionLink("Список пользователей", "UserList", "Roles")
                        </div>
                        <div class="nav-link">
                            @Html.ActionLink("Список ролей", "Index", "Roles")
                        </div>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login" href="/Account/Login">Вход</a>
                            
                        }
                        @if (User.Identity.IsAuthenticated)
                        {

                        <div class="nav-link">
                        @Html.ActionLink("Выйти", "Logout", "Account")</div>
                                                
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                                <a class="nav-link text-dark other" asp-area="" asp-controller="Account" asp-action="Register" href="/Account/Register">Регистрация</a>
                           
                        } 
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link" asp-area="" asp-controller="Account">@User.Identity.Name</a>
                        
                    }
                </nav>
            </div>
        </nav> *@
    </header>
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>

   

   
    @RenderSection("Scripts", required: false)
</body>

</html>
<style>
    a{
        text-decoration: none;
        color: #000;
    }

    btn btn-primary a{
        color: white;
    }

    div#navbarNavAltMarkup {
        background: lightgray;
        padding: 15px;
    }
