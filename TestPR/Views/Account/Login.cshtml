@model TestPR.Models.LoginViewModel
@{
    ViewBag.Title = "Авторизация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Вход в приложение</h3>
    @using (Html.BeginForm())
    {
        <br />

        <div class="control-label">
            @Html.LabelFor(model => model.Email, "Email")
        </div>
        @Html.EditorFor(model => model.Email)
        <div class="err">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        ;
        <br />

        <div class="control-label">
            @Html.LabelFor(model => model.Password, "Пароль")
        </div>
        @Html.EditorFor(model => model.Password)
        <div class="err">
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />

        <div class="control-label">
            @Html.LabelFor(model => model.RememberMe, "Запомнить меня")
        </div>
        @Html.EditorFor(model => model.RememberMe)
        <div class="err">
            @Html.ValidationMessageFor(model => model.RememberMe)
        </div>
        ;
        <br />

        <input type="submit" value="Войти" class="btn btn-primary" />
        <br />

    }
    <a class="btn btn-light" href="/Account/Register">Регистрация</a>
</div>
